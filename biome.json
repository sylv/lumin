{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off",
        "noUselessElse": "off",
        "noParameterAssign": "off",
        "noUnusedTemplateLiteral": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "off"
      }
    }
  },
  "files": {
    "ignore": [
      "dist/**",
      "*.js",
      "*.cjs",
      "*.mjs",
      "*.spec.ts"
    ]
  },
  "overrides": [
    {
      "include": [
        "**/components/ui/**",
        "**/@generated/**"
      ],
      "linter": {
        "enabled": false
      }
    }
  ]
}